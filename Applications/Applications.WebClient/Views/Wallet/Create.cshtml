<section class="page-section" id="createWallet">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Already have a wallet?</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <form>
            <div class="row align-items-stretch mb-5">
                <button class="btn-sm btn-info" type="button" onclick="FillJmbgAndPassFromLocalStorage()">Apply saved jmbg & pass</button>
                <div class="col-md-6">
                    <div class="form-group">
                        <input autocomplete="off" class="form-control" id="JMBG" name="JMBG" placeholder="Your JMBG *" required="required" data-validation-required-message="Please enter your JMBG." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input autocomplete="off" class="form-control" id="PASS" name="Pass" placeholder="Your Pass *" required="required" data-validation-required-message="Please enter your Pass." />
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary btn-xl text-uppercase" type="submit" asp-action="WalletInfo">Wallet details</button>
            </div>
        </form>
        <br />
        <br />
        <br />
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Create wallet</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>
        <form method="post">
            <div class="row align-items-stretch mb-5">
                <div class="col-md-6">
                    <div class="form-group">
                        <input class="form-control" id="FirstName" name="FirstName" type="text" placeholder="Your Name *" required="required" data-validation-required-message="Please enter your name." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input class="form-control" id="LastName" name="LastName" type="text" placeholder="Your Last Name *" required="required" data-validation-required-message="Please enter your last name." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <input  autocomplete="off" class="form-control" id="JMBG" name="JMBG" placeholder="Your JMBG *" required="required" data-validation-required-message="Please enter your JMBG." />
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-md-0">
                        <input class="form-control" id="Bank" name="Bank" placeholder="Your Bank Name *" required="required" data-validation-required-message="Please enter Bank Name." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group mb-md-0">
                        <input autocomplete="off" class="form-control" id="PIN" name="PIN" placeholder="Your PIN *" required="required" data-validation-required-message="Please enter PIN." />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group mb-md-0">
                        <input class="form-control" id="PIN" name="BankAccount" placeholder="Your Bank Account *" required="required" data-validation-required-message="Please enter Bank Account." />
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
            </div>
            <div class="text-center">
                <div id="success"></div>
                <button class="btn btn-primary btn-xl text-uppercase" type="submit" asp-action="Create">Create wallet</button>
            </div>
        </form>
    </div>
</section>
